<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_ingredient"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="@+id/image_ingredient"
        app:layout_constraintEnd_toEndOf="@id/image_ingredient"
        app:layout_constraintRight_toRightOf="@id/image_ingredient"
        app:layout_constraintTop_toBottomOf="@id/image_ingredient"/>
    <TextView
        android:id="@+id/ingredient_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="@+id/ingredient_name"
        app:layout_constraintRight_toRightOf="@id/image_ingredient"
        app:layout_constraintTop_toBottomOf="@id/ingredient_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>